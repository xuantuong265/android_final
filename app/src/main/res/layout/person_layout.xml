<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


       <androidx.appcompat.widget.Toolbar
           xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:background="@color/colorYellow"
           android:padding="10dp"
           android:id="@+id/toolbar_page_id"
           android:layout_height="?attr/actionBarSize">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent" >

               <ImageView
                   android:id="@+id/img_back_id"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_keyboard_backspace_black_24dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:id="@+id/title_page_id"
                   android:text="Trang cá nhân"
                   android:textColor="#ffffff"
                   android:gravity="center"
                   android:textSize="20dp"
                   android:textStyle="bold"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

           </LinearLayout>

       </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

              <LinearLayout
                  android:id="@+id/layout_info"
                  android:padding="10dp"
                  android:background="@drawable/custom_layout_info"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" >

                  <de.hdodenhof.circleimageview.CircleImageView
                      android:src="@mipmap/ic_launcher"
                      android:layout_width="100dp"
                      android:layout_height="100dp" >
                  </de.hdodenhof.circleimageview.CircleImageView>

                  <LinearLayout
                      android:padding="10dp"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:id="@+id/email_id"
                          android:textColor="#78000000"
                          android:textSize="18dp"
                          android:textStyle="bold"
                          android:text="xuantuong265@gmail.com"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                      <TextView
                          android:layout_marginTop="5dp"
                          android:id="@+id/date_id"
                          android:textColor="#78000000"
                          android:text="Ngày đăng ký"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                      <TextView
                          android:id="@+id/dangnhap_id"
                          android:textSize="18dp"
                          android:textStyle="bold"
                          android:textColor="#78000000"
                          android:text="Đăng nhập / Đăng ký"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                  </LinearLayout>


              </LinearLayout>

              <LinearLayout
                  android:layout_marginTop="15dp"
                  android:padding="10dp"
                  android:background="@drawable/custom_layout_info"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" >

                  <LinearLayout
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Quản lý đơn hàng"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:id="@+id/donhang_choxuly_id"
                          android:text="Đơn hàng chờ xử lý"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Đơn hàng chờ vận chuyển"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Đơn hàng thành công"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Sản phẩm đã mua"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Đơn hàng đã hủy"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Sản phẩm yêu thích"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Liên hệ với Tiki"
                          android:id="@+id/contact_id"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>



                  </LinearLayout>

                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:weightSum="3"
                      android:padding="5dp"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" >

                      <TextView
                          android:text="Thông tin thanh toán"
                          android:layout_weight="2.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" />

                      <LinearLayout
                          android:gravity="right"
                          android:layout_weight="0.5"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content" >

                          <ImageView
                              android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                      </LinearLayout>


                          <Button
                              android:layout_marginTop="20dp"
                              android:id="@+id/btnLogout"
                              android:text="Đăng xuất"
                              android:textColor="#fff"
                              android:background="@drawable/custom_btn_login_layout"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content" />


                  </LinearLayout>



              </LinearLayout>

          </LinearLayout>

       </ScrollView>

   </LinearLayout>



</LinearLayout>